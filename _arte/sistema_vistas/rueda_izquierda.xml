<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>   
  <view name="system">
    <carousel name="systemcarousel">
        <type>vertical_wheel</type> <!-- tipos de carousel, horizontal_wheel, vertical y horizontal -->
		<pos>0 0</pos> <!-- posicion del carousel -->
        <size>1 0.921</size> <!-- tamaño del carousel -->
        <logoScale>1.25</logoScale> <!-- escalado del logo seleccionado -->
        <logoSize>0.22 0.15</logoSize> <!-- tamaño de los logos -->
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
        <logoRotation>10.5</logoRotation> <!-- espacio en angulos entre logo, a mas grados mas se separan entre si -->
		<logoRotationOrigin>-3.0 0.5</logoRotationOrigin> <!-- origen de la rotacion, curva del carousel, entre menor es el numero may -->
		<logoAlignment>left</logoAlignment>
        <zIndex>24</zIndex>	 
	</carousel>
    <image name="background" extra="true">
      <tile>false</tile>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <path>./_arte/imgs/fondo_sistemas_wheel.png</path>
	  <color>cccccc</color>
	  <zIndex>10</zIndex>
    </image> 
    <video name="video_sys" extra="true">
	  <path>./_arte/bgv-sistemas/default.mp4</path>
      <path>./_arte/bgv-sistemas/${system.theme}.mp4</path>
	  <pos>0.395 0.10</pos>
	  <size>0.52 0.68</size>
      <maxSize>0.525 0.685</maxSize>
      <origin>0 0</origin>
      <delay>0.5</delay>
	  <effect>none</effect>
      <loops>2</loops>
    </video>	
     <text name="systemInfo">
      <pos>0.155 0.735</pos>
    </text> 
  </view>
</theme>
